<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Team Management</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/teamManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato" />
    <style>
        body {
            height: 100%;
            flex-direction: column;
            display: flex;
            margin: 0;
            padding: 0;
            font: 1em/1.5 "Lato", sans-serif;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            text-rendering: optimizelegibility;
            font-size: 1.3em;
        }

            header h1, header h2 {
                margin: 0;
            }

            header h1 {
                font-size: 2.5em;
            }

            header h2 {
                text-transform: uppercase;
                margin-top: -0.5em;
                font-size: 1.5em;
            }

        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 3;
            background: #222;
            display: flex;
            justify-content: space-around;
            padding: 30px 0;
            border-bottom: 2px solid #d78f09
        }

            .navbar a {
                color: #fff;
                text-decoration: none;
                padding: 10px 20px;
                font-size: 1.2em;
                transition: background 0.3s, color 0.3s;
            }

                .navbar a:hover {
                    background: #333;
                }

        .container {
            flex: 1;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            margin-top: 80px;
        }

        footer {
            background-color: #0b0a0b;
            padding: 20px 0;
            text-align: center;
            font-size: 1.2em;
            color: #f5f5f5;
            border-top: 2px solid #d78f09;
            margin-top: auto; 
        }

            footer a {
                color: #d78f09;
                text-decoration: none;
                transition: color 0.3s;
            }

                footer a:hover {
                    color: #f5f5f5;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar">
            <a href="/Calender">Calender</a>
            <a href="/NewProject">New Project</a>
            <a href="/People">People</a>
            <a href="/Index">HOME</a>
            @if (User.Identity.IsAuthenticated)
            {
                <span>@User.Identity.Name</span>
                <a href="/Identity/Account/Logout">Log out</a>
            }
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Team Management - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        function changeHeaderHeight(height) {
            document.querySelector('header').style.height = `${height}vh`;
        }
    </script>
</body>
</html>